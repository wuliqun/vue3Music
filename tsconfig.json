{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6","DOM"],
    "typeRoots": ["./types","./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*":["./node_modules/@types"],
      "CONFIG/*":["./config/*"],
      "UTILS/*":["./utils/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}